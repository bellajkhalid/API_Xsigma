{
  "name": "universal-screenshot-monitor",
  "description": "Universal MCP for automatic website screenshot monitoring and error detection",
  "command": "node",
  "args": ["./universal-screenshot-monitor-mcp/dist/index.js"],
  "cwd": "C:\\Users\\bella\\OneDrive\\Desktop\\API_Xsigma",
  "env": {
    "NODE_ENV": "production"
  },
  "tools": [
    {
      "name": "take_screenshot",
      "description": "Take a screenshot of any website",
      "examples": [
        {
          "description": "Simple screenshot",
          "parameters": {
            "url": "http://localhost:3000"
          }
        },
        {
          "description": "Full configuration screenshot",
          "parameters": {
            "url": "http://localhost:3000",
            "viewport": { "width": 1920, "height": 1080 },
            "fullPage": true,
            "waitFor": 3000,
            "outputDir": "./screenshots"
          }
        }
      ]
    },
    {
      "name": "detect_errors",
      "description": "Detect errors on a website and take screenshot",
      "examples": [
        {
          "description": "Basic error detection",
          "parameters": {
            "url": "http://localhost:3000"
          }
        },
        {
          "description": "Advanced error detection",
          "parameters": {
            "url": "http://localhost:3000/models/hjm",
            "selector": ".hjm-model-container",
            "waitFor": 5000,
            "outputDir": "./error-reports"
          }
        }
      ]
    }
  ],
  "installation": {
    "steps": [
      "1. Navigate to the universal-screenshot-monitor-mcp directory",
      "2. Run: npm install",
      "3. Run: npm run build",
      "4. Add this configuration to Augment MCP settings",
      "5. Test with: take_screenshot tool"
    ]
  },
  "requirements": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0",
    "dependencies": [
      "puppeteer",
      "sharp",
      "@modelcontextprotocol/sdk"
    ]
  }
}
