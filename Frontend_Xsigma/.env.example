# Supabase Configuration for XSigma
# Copy this file to .env and fill in your actual Supabase credentials

# Supabase Project URL (Replace with your actual project URL)
VITE_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anonymous Key (Replace with your actual anon key)
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# Optional: Supabase Service Role Key (for admin operations - keep secret!)
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Application Configuration
VITE_APP_NAME=XSigma
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# API Configuration (if you have additional backend services)
VITE_API_BASE_URL=https://api.xsigma.co.uk

# Feature Flags
VITE_ENABLE_REGISTRATION=true
VITE_ENABLE_2FA=false
VITE_ENABLE_API_KEYS=true

# Security Configuration
VITE_SESSION_TIMEOUT=86400000
VITE_MAX_LOGIN_ATTEMPTS=5

# Analytics (optional)
VITE_GOOGLE_ANALYTICS_ID=
VITE_MIXPANEL_TOKEN=

# Email Configuration (for Supabase Auth)
# These are configured in your Supabase dashboard under Authentication > Settings
# SUPABASE_SMTP_HOST=
# SUPABASE_SMTP_PORT=
# SUPABASE_SMTP_USER=
# SUPABASE_SMTP_PASS=
